<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <h1>Full Menu</h1>
    <h2>Mains</h2>
    <ul>
        <% menu.forEach(item => { %>
            <% if (item.category === 'mains') { %>
                <li>
                    <strong><%= item.name %></strong> - $<%= item.price.toFixed(2) %> (<%= item.rating %> stars)
                    <p><%= item.details %></p>
                </li>
            <% } %>
        <% }) %>
    </ul>

    
    <h2>Desserts</h2>
    <ul>
        <% menu.forEach(item => { %>
            <% if (item.category === 'desserts') { %>
                <li>
                    <strong><%= item.name %></strong> - $<%= item.price.toFixed(2) %> (<%= item.rating %> stars)
                    <p><%= item.details %></p>
                </li>
            <% } %>
        <% }) %>
    </ul>

   
    <h2>Sides</h2>
    <ul>
        <% menu.forEach(item => { %>
            <% if (item.category === 'sides') { %>
                <li>
                    <strong><%= item.name %></strong> - $<%= item.price.toFixed(2) %> (<%= item.rating %> stars)
                    <p><%= item.details %></p>
                </li>
            <% } %>
        <% }) %>
    </ul>

    <a href="/">Back to Home</a>
</body>
</html>

</body>
</html>